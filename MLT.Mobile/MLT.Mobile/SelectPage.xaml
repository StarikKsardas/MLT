<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MLT.Mobile.SelectPage"
             BackgroundImageSource="Background.png">
    
    <ContentPage.Content>
        <StackLayout>
            <Button Text = "Отправить след" FontSize="Medium" BorderWidth="2" Margin="2"
                    HorizontalOptions="Fill" Clicked="SendLatent"/>
            <Button Text = "Проверить результаты" FontSize="Medium" BorderWidth="2" Margin="2"
                    HorizontalOptions="Fill" Clicked="CheckResults" />
            <Button Text = "Изменить пароль" FontSize="Medium" BorderWidth="2" Margin="2"
                    HorizontalOptions="Fill" Clicked="ChangePassword" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>